    <h2 class="mb-4 text-primary">ğŸ”§ ArÄ±za DetaylarÄ±</h2>

    <div class="row g-4">
        <!-- Sol Panel -->
        <div class="col-lg-6">
            <div class="form-section shadow-sm">
                <div class="mb-4">
                    <div class="section-header">ğŸ“Œ Bildiren KiÅŸi</div>
                    <p><strong>Ä°sim Soyisim:</strong> @Model.ReporterName</p>
                    <p><strong>Email:</strong> @Model.ReporterEmail</p>
                    <p><strong>Telefon:</strong> @Model.ReporterPhone</p>
                </div>

                <hr />

                <div class="mb-4">
                    <div class="section-header">ğŸ“ ArÄ±za Bilgileri</div>
                    <p><strong>BaÅŸlÄ±k:</strong> @Model.Title</p>
                    <p><strong>AÃ§Ä±klama:</strong> @Model.Description</p>
                    <p><strong>Tarih:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                </div>

                <hr />

                <div>
                    <div class="section-header">ğŸ‘¥ Atamalar</div>
                    <p><strong>SÃ¼pervizÃ¶r:</strong> @Model.AssignedByName</p>
                    <p><strong>Teknisyen:</strong> @Model.AssignedToName</p>
                    <p><strong>Atanma ZamanÄ±:</strong> @Model.AssignedTime</p>
                </div>
            </div>
        </div>

        <!-- SaÄŸ Panel -->
        <div class="col-lg-6">
            <div class="form-section shadow-sm">
                <div class="mb-4">
                    <div class="section-header">ğŸ­ Makine ve Departman</div>
                    <p><strong>Makine:</strong> @Model.MachineName</p>
                    <p><strong>Departman:</strong> @Model.DepartmanName</p>
                    <p><strong>Durum:</strong> <span class="badge @GetStatusBadgeClass(@Model.Status) px-3 py-2">@Model.Status</span></p>
                    <p><strong>Kapatma Tarihi:</strong> @Model.ClosedTime</p>
                    <p><strong>Kapatan Personel:</strong> @(!string.IsNullOrEmpty(Model.ClosedByName) ? Model.ClosedByName : "Kapatan kiÅŸi bilgisi yok")</p>


                </div>

                <hr />

                <!-- Makine SeÃ§imi bÃ¶lÃ¼mÃ¼ -->
                <div class="mb-4">
                    <div class="section-header">âš™ï¸ Makine SeÃ§imi</div>
                    <input type="hidden" id="departmanId" value="@ViewBag.DepartmanId" />
                    <select id="machineSelect" name="machineId" class="form-select" 
                            @(Model.Status == "KapandÄ±" ? "disabled" : "")>
                        <option value="">Makine SeÃ§</option>
                    </select>
                    <div id="loading" class="mt-2 d-none">
                        <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                        <span class="ms-2">Makine listesi yÃ¼kleniyor...</span>
                    </div>
                    <div id="error" class="alert alert-danger mt-2 d-none"></div>
                </div>

                <!-- Kapatma AÃ§Ä±klamasÄ± -->
                <div class="mb-4">
                    <div class="section-header">ğŸ›‘ Kapatma AÃ§Ä±klamasÄ±</div>
                    <textarea id="closeDescription" class="form-control" rows="4" placeholder="Kapatma aÃ§Ä±klamasÄ± giriniz..." 
                @(Model.Status == "KapandÄ±" ? "disabled" : "")>@(Model.Status == "KapandÄ±" ? Model.ClosedDescription : "")</textarea>
                </div>

                <!-- Buton -->
                <button id="closeFaultBtn" class="btn btn-success w-100 mb-3" 
                        @(Model.Status == "KapandÄ±" ? "disabled style='display:none;'" : "disabled")>âœ… ArÄ±zayÄ± Kapat</button>

                <div id="resultMessage"></div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function () {
        const departmanId = $('#departmanId').val();
        const faultId = '@Model.Id';
        const isClosed = '@Model.Status' === 'KapandÄ±';

        $('#machineSelect').select2({
            placeholder: "Makine SeÃ§",
            allowClear: !isClosed,
            language: { noResults: () => "SonuÃ§ bulunamadÄ±" }
        });

        if (isClosed) {
            // ArÄ±za kapandÄ±ysa, buton kapalÄ±, seÃ§im ve textarea devre dÄ±ÅŸÄ±
            $('#closeFaultBtn').hide();
        } else {
            $('#machineSelect').on('change', function () {
                const selected = $(this).val();
                $('#closeFaultBtn').prop('disabled', !selected);
                $('#resultMessage').html('');
            });
        }

        if (departmanId) {
            $('#loading').removeClass('d-none');
            $.ajax({
                url: 'http://localhost:5164/api/Machine/GetMachineByDepartmanId/' + departmanId,
                type: 'GET',
                success: function (data) {
                    $('#loading').addClass('d-none');
                    const $select = $('#machineSelect');
                    $select.empty().append('<option></option>');
                    $.each(data, function (i, item) {
                        $select.append($('<option>', {
                            value: item.id,
                            text: item.name,
                            selected: isClosed && item.name === '@Model.MachineName' // seÃ§ili olarak ayarla
                        }));
                    });
                    $select.trigger('change');
                },
                error: function () {
                    $('#loading').addClass('d-none');
                    $('#error').text('Makine listesi yÃ¼klenirken hata oluÅŸtu!').removeClass('d-none');
                }
            });
        } else {
            alert('Departman ID bulunamadÄ±!');
        }

        if (!isClosed) {
            $('#closeFaultBtn').click(function () {
                const machineId = $('#machineSelect').val();
                const description = $('#closeDescription').val().trim();    

                if (!machineId || !description) {
                    alert('Makine seÃ§imi ve aÃ§Ä±klama zorunludur.');
                    return;
                }

                $('#closeFaultBtn').prop('disabled', true);
                $('#resultMessage').html('<div class="text-info">Ä°ÅŸlem yapÄ±lÄ±yor...</div>');

                $.ajax({
                    url: 'http://localhost:5164/api/FaultReport/CloseFault',
                    type: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        id: faultId,
                        machineId: machineId,
                        faultDescription: description,
                        closedById: '@ViewBag.UserId',
                        status: "KapandÄ±"
                    }),
                    success: function () {
                        $('#resultMessage').html('<div class="alert alert-success">ArÄ±za baÅŸarÄ±yla kapatÄ±ldÄ±.</div>');
                        setTimeout(() => location.reload(), 1500); // sayfayÄ± yenile
                    },
                    error: function (xhr) {
                        const msg = xhr.responseJSON?.message || 'Bir hata oluÅŸtu!';
                        $('#resultMessage').html(`<div class="alert alert-danger">${msg}</div>`);
                        $('#closeFaultBtn').prop('disabled', false);
                    }
                });
            });
        }
    });

</script>
