@model DTO.AppUserDto.ResetPasswordDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Şifre Sıfırlama</title>

    <link href="startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary d-flex align-items-center min-vh-100">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 my-5">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="text-gray-900 font-weight-bold">Şifre Sıfırlama</h2>
                        <p class="text-muted">Yeni şifrenizi girin</p>
                    </div>

                    <form asp-action="ResetPassword" asp-controller="Login" method="post">
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Token" />

                        <div class="form-group">
                            <label asp-for="Password">Yeni Şifre</label>
                            <input asp-for="Password" class="form-control" placeholder="Yeni şifrenizi girin" type="password" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Şifreyi Onayla</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifrenizi tekrar girin" type="password" />
                        </div>

                        <button type="submit" class="btn btn-success btn-block font-weight-bold">
                            Şifreyi Sıfırla
                        </button>

                        <div class="text-center mt-3">
                            <a class="text-primary small" href="/Login">Giriş sayfasına dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="startbootstrap-sb-admin-2-gh-pages/vendor/jquery/jquery.min.js"></script>
<script src="startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="startbootstrap-sb-admin-2-gh-pages/js/sb-admin-2.min.js"></script>

</body>
</html>
